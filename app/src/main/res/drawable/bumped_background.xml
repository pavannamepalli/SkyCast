<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF202B3C" /> <!-- Background color, replace with desired color -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Shadow color, adjust as needed -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust as needed -->
        </shape>
    </item>
</layer-list>



